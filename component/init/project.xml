
<project>
	<extend>${basedir}/../../project.xml</extend>
    <!--pomVersion is in parent -->
    <!-- groupId is in parent -->
	<id>singularity-epm-init</id>
	<name>Singularity EPM Init</name>
	<description>Singulrity EPM Initializer</description>
	<shortDescription>EPM Init</shortDescription>
	<package>org.firstopen.epm.*</package>
	<dependencies>
		<dependency>
			<groupId>singularity</groupId>
			<artifactId>singularity-util</artifactId>
			<version>${pom.currentVersion}</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>singularity</groupId>
			<artifactId>singularity-system</artifactId>
			<version>${pom.currentVersion}</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>singularity</groupId>
			<artifactId>singularity-business</artifactId>
			<version>${pom.currentVersion}</version>
			<type>ejb</type>
		</dependency>
		<dependency>
			<groupId>singularity</groupId>
			<artifactId>singularity-ale</artifactId>
			<version>${pom.currentVersion}</version>
			<type>ejb</type>
		</dependency>
      	<dependency>
			<groupId>singularity</groupId>
			<artifactId>singularity-hibernate</artifactId>
			<version>${pom.currentVersion}</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>singularity</groupId>
			<artifactId>singularity-config</artifactId>
			<version>${pom.currentVersion}</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>singularity</groupId>
			<artifactId>singularity-schema</artifactId>
			<version>${pom.currentVersion}</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
        <dependency>
            <groupId>singularity</groupId>
            <artifactId>singularity-devicemgr</artifactId>
            <version>${pom.currentVersion}</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>servlet-api</artifactId>
			<version>2.4</version>
			<type>jar</type>
			<url>http://java.sun.com/</url>
		</dependency>
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>jsp-api</artifactId>
			<version>2.0</version>
			<type>jar</type>
			<url>http://java.sun.com/</url>
		</dependency>
		<dependency>
			<groupId>jboss</groupId>
			<artifactId>jboss-j2ee</artifactId>
			<version>${org.jboss.version}</version>
			<type>jar</type>
			<url>http://www.jboss.org/</url>
		</dependency>
		<dependency>
			<groupId>hibernate</groupId>
			<artifactId>hibernate</artifactId>
			<version>${org.hibernate.version}</version>
			<type>jar</type>
			<url>http://www.hibernate.org</url>
		</dependency>
		<dependency>
			<id>commons-logging</id>
			<version>1.0.4</version>
			<url>http://jakarta.apache.org/commons/</url>
			<type>jar</type>
		</dependency>
		<dependency>
			<id>log4j</id>
			<version>${org.apache.jakarta.log4j.version}</version>
			<url>http://jakarta.apache.org/log4j/</url>
			<type>jar</type>
		</dependency>
   	</dependencies>
	<build>
		<defaultGoal>singularity:dist</defaultGoal>
		<sourceDirectory>src</sourceDirectory>
		<unitTestSourceDirectory>test</unitTestSourceDirectory>
		<unitTest>
			<includes>
				<include>**/*.java</include>
			</includes>
		</unitTest>
	</build>
	<reports>
		<report>maven-faq-plugin</report>
		<report>maven-license-plugin</report>
	</reports>
</project>