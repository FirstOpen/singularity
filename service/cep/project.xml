		</dependency>
		<dependency>
			<groupId>jboss</groupId>
			<artifactId>jboss-j2ee</artifactId>
			<version>${org.jboss.version}</version>
			<type>jar</type>
			<url>http://www.jboss.org/</url>
		</dependency>
		<dependency>
			<groupId>jboss</groupId>
			<artifactId>jboss-system</artifactId>
			<version>${org.jboss.version}</version>
			<type>jar</type>
			<url>http://www.jboss.org/</url>
		</dependency>
		<dependency>
			<groupId>jboss</groupId>
			<artifactId>jboss-jmx</artifactId>
			<version>${org.jboss.version}</version>
			<type>jar</type>
			<url>http://www.jboss.org/</url>
		</dependency>
		<dependency>
			<groupId>drools</groupId>
			<artifactId>drools-all</artifactId>
			<version>jdk5-2.5-beta-2</version>
			<url>http://www.drools.org/</url>
