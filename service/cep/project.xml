	<name>Singularity CEP</name>
	<description>Singularity Complex Event Processing</description>
	<shortDescription>Singularity CEP</shortDescription>
	<package>org.firstopen.singularity.cep.*</package>
	<dependencies>
		<dependency>
			<groupId>jboss</groupId>
			<artifactId>jboss-common</artifactId>
			<version>${org.jboss.version}</version>
			<type>jar</type>
			<url>http://www.jboss.org/</url>
		</dependency>
		<dependency>
			<groupId>singularity</groupId>
			<artifactId>singularity-util</artifactId>
			<version>${pom.currentVersion}</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>singularity</groupId>
			<artifactId>singularity-system</artifactId>
			<version>${pom.currentVersion}</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>singularity</groupId>
			<artifactId>singularity-ale</artifactId>
			<version>${pom.currentVersion}</version>
			<type>ejb</type>
		</dependency>
        <dependency>
            <groupId>xdoclet</groupId>
            <artifactId>xdoclet-hibernate-module</artifactId>
            <version>${xdoclet.version}-patch</version>
            <type>jar</type>
            <url>http://xdoclet.sourceforge.net</url>
        </dependency>
		<dependency>
			<groupId>xdoclet</groupId>
			<artifactId>xdoclet</artifactId>
			<version>${xdoclet.version}</version>
			<type>jar</type>
			<url>http://xdoclet.sourceforge.net</url>
		</dependency>
		<dependency>
			<groupId>xdoclet</groupId>
			<artifactId>xdoclet-xdoclet-module</artifactId>
