
<project>
	<extend>${basedir}/../../project.xml</extend>
        <!--pomVersion is in parent -->
        <!-- groupId is in parent -->
	<id>singularity-hibernate-resource</id>
	<name>Singularity Hibernate Services</name>
	<description>Singularity Hibernate Services</description>
	<shortDescription>Singularity Hibernate Services</shortDescription>
	<dependencies>
	        <!-- These dependencies are for the sole purpose of creating the Manifest Class-Path -->
		<dependency>
			<groupId>singularity</groupId>
			<artifactId>singularity-util</artifactId>
			<version>${pom.currentVersion}</version>
			<type>jar</type>
			<properties>
				<jar.manifest.classpath>true</jar.manifest.classpath>
			</properties>
		</dependency>
		<dependency>
			<groupId>singularity</groupId>
			<artifactId>singularity-system</artifactId>
			<version>${pom.currentVersion}</version>
			<type>jar</type>
			<properties>
				<jar.manifest.classpath>true</jar.manifest.classpath>
			</properties>
		</dependency>
		<dependency>
			<groupId>singularity</groupId>
			<artifactId>singularity-schema</artifactId>
			<version>${pom.currentVersion}</version>
			<type>jar</type>
			<properties>
				<jar.manifest.classpath>true</jar.manifest.classpath>
			</properties>
		</dependency>
		<dependency>
			<groupId>drools</groupId>
			<artifactId>drools-all</artifactId>
			<version>2.0</version>
			<properties>
				<jar.manifest.classpath>true</jar.manifest.classpath>
				<jar.manifest.classpath.dir>APP-INF/lib</jar.manifest.classpath.dir>
			</properties>
			<url>http://www.drools.org/</url>
		</dependency>
		<dependency>
			<groupId>xmlbeans</groupId>
			<artifactId>xbean</artifactId>
			<version>2.0.0</version>
			<type>jar</type>
			<url>http://xmlbeans.apache.org</url>
			<properties>
				<jar.manifest.classpath>true</jar.manifest.classpath>
				<jar.manifest.classpath.dir>APP-INF/lib</jar.manifest.classpath.dir>
			</properties>
		</dependency>
		<dependency>
			<groupId>xmlbeans</groupId>
			<artifactId>jsr173_api</artifactId>
			<version>2.0.0</version>
			<type>jar</type>
			<url>http://xmlbeans.apache.org</url>
			<properties>
				<jar.manifest.classpath>true</jar.manifest.classpath>
				<jar.manifest.classpath.dir>APP-INF/lib</jar.manifest.classpath.dir>
			</properties>
		</dependency>
		<dependency>
			<groupId>hibernate</groupId>
			<artifactId>hibernate</artifactId>
			<version>${org.hibernate.version}</version>
			<type>jar</type>
            <properties>
                <jar.manifest.classpath>true</jar.manifest.classpath>
                <jar.manifest.classpath.dir>APP-INF/lib</jar.manifest.classpath.dir>
            </properties>    
			<url>http://www.hibernate.org/</url>
		</dependency>
		<dependency>
			<groupId>hibernate</groupId>
			<artifactId>hibernate-tools</artifactId>
			<version>3.1beta2</version>
			<type>jar</type>
			<url>http://www.hibernate.org/</url>
		</dependency>
        <dependency>
            <groupId>ehcache</groupId>
            <artifactId>ehcache</artifactId>
            <version>1.1</version>
            <type>jar</type>
            <url>http://ehcache.sourceforge.net</url>
            <properties>
                <jar.manifest.classpath>true</jar.manifest.classpath>
                <jar.manifest.classpath.dir>APP-INF/lib</jar.manifest.classpath.dir>
              </properties>    
        </dependency>
 		<dependency>
			<groupId>dom4j</groupId>
			<artifactId>dom4j</artifactId>
			<version>1.6.1</version>
			<type>jar</type>
			<url>http://dom4j.org/</url>
		</dependency>
		<dependency>
			<id>commons-collections</id>
			<version>3.1</version>
			<url>http://jakarta.apache.org/commons/</url>
		</dependency>
		<dependency>
			<groupId>jboss</groupId>
			<artifactId>jboss-j2ee</artifactId>
			<version>${org.jboss.version}</version>
			<type>jar</type>
			<url>http://www.jboss.org/</url>
		</dependency>
         <dependency>
            <groupId>xdoclet</groupId>
            <artifactId>xdoclet-hibernate-module</artifactId>
            <version>${xdoclet.version}-patch</version>
            <type>jar</type>
            <url>http://xdoclet.sourceforge.net</url>
        </dependency>
        <dependency>
            <groupId>xdoclet</groupId>
            <artifactId>xdoclet</artifactId>
            <version>${xdoclet.version}</version>
            <type>jar</type>
            <url>http://xdoclet.sourceforge.net</url>
        </dependency>
        <dependency>
            <groupId>xdoclet</groupId>
            <artifactId>xdoclet-xdoclet-module</artifactId>
            <version>${xdoclet.version}</version>
            <url>http://xdoclet.sourceforge.net</url>
        </dependency>
        <dependency>
            <groupId>xjavadoc</groupId>
            <artifactId>xjavadoc</artifactId>
            <version>1.1-j5-v4</version>
            <type>jar</type>
        </dependency>
    	</dependencies>
	<build>
		<defaultGoal>singularity:dist</defaultGoal>
		<sourceDirectory>${basedir}/src</sourceDirectory>
		<unitTestSourceDirectory>test</unitTestSourceDirectory>
		<resources>
			<resource>
				<directory>${basedir}/descriptors</directory>
				<includes>
					<include>**/*.xml</include>
				</includes>
			</resource>
		</resources>
		<unitTest>
			<includes>
				<include>**/*.java</include>
			</includes>
		</unitTest>
	</build>
	<reports>
		<report>maven-faq-plugin</report>
		<report>maven-license-plugin</report>
	</reports>
</project>