
<project>
	<extend>${basedir}/../../project.xml</extend>
        <!--pomVersion is in parent -->
        <!-- groupId is in parent -->
	<id>singularity-hibernate</id>
	<name>Singularity hibernate for Admin</name>
	<description>Singularity Hibernate for Admin</description>
	<shortDescription>Singularity hibernate for Admin</shortDescription>
	<package>org.firstopen.custom.*</package>
	<dependencies>
		<dependency>
			<groupId>singularity</groupId>
			<artifactId>singularity-util</artifactId>
			<version>${pom.currentVersion}</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>singularity</groupId>
			<artifactId>singularity-system</artifactId>
			<version>${pom.currentVersion}</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>singularity</groupId>
			<artifactId>singularity-schema</artifactId>
			<version>${pom.currentVersion}</version>
			<type>jar</type>
		</dependency>
        <dependency>
            <groupId>singularity</groupId>
            <artifactId>singularity-admin</artifactId>
            <version>${pom.currentVersion}</version>
            <type>jar</type>
            <properties>
                <jar.manifest.classpath>true</jar.manifest.classpath>
            </properties>
        </dependency>
		<dependency>
			<groupId>jboss</groupId>
			<artifactId>jboss-common</artifactId>
			<version>${org.jboss.version}</version>
			<type>jar</type>
			<url>http://www.jboss.org/</url>
		</dependency>
        <dependency>
            <groupId>xdoclet</groupId>
            <artifactId>xdoclet-hibernate-module</artifactId>
            <version>${xdoclet.version}-patch</version>
            <type>jar</type>
            <url>http://xdoclet.sourceforge.net</url>
        </dependency>
		<dependency>
			<groupId>xdoclet</groupId>
			<artifactId>xdoclet</artifactId>
			<version>${xdoclet.version}</version>
			<type>jar</type>
			<url>http://xdoclet.sourceforge.net</url>
		</dependency>
		<dependency>
			<groupId>xdoclet</groupId>
			<artifactId>xdoclet-xdoclet-module</artifactId>
			<version>${xdoclet.version}</version>
			<url>http://xdoclet.sourceforge.net</url>
		</dependency>
		<dependency>
			<groupId>xjavadoc</groupId>
			<artifactId>xjavadoc</artifactId>
			<version>1.1-j5-v4</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<id>commons-collections</id>
			<version>3.1</version>
			<url>http://jakarta.apache.org/commons/</url>
		</dependency>
		<dependency>
			<id>commons-logging</id>
			<version>1.0.4</version>
			<url>http://jakarta.apache.org/commons/</url>
		</dependency>
		<dependency>
			<id>log4j</id>
			<version>${org.apache.jakarta.log4j.version}</version>
			<url>http://jakarta.apache.org/log4j/</url>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>hibernate</groupId>
			<artifactId>hibernate</artifactId>
			<version>${org.hibernate.version}</version>
			<type>jar</type>
			<url>http://www.hibernate.org</url>
            <properties>
                <jar.manifest.classpath>true</jar.manifest.classpath>
                <jar.manifest.classpath.dir>APP-INF/lib</jar.manifest.classpath.dir>
            </properties>    
		</dependency>
        <dependency>
            <groupId>ehcache</groupId>
            <artifactId>ehcache</artifactId>
            <version>1.1</version>
            <type>jar</type>
            <url>http://ehcache.sourceforge.net</url>
            <properties>
                <jar.manifest.classpath>true</jar.manifest.classpath>
                <jar.manifest.classpath.dir>APP-INF/lib</jar.manifest.classpath.dir>
            </properties>    
        </dependency>
   	    <dependency>
			<groupId>xmlbeans</groupId>
			<artifactId>xbean</artifactId>
			<version>2.0.0</version>
			<type>jar</type>
			<url>http://xmlbeans.apache.org</url>
		</dependency>
		<dependency>
			<groupId>xmlbeans</groupId>
			<artifactId>jsr173_api</artifactId>
			<version>2.0.0</version>
			<type>jar</type>
			<url>http://xmlbeans.apache.org</url>
		</dependency>
		<dependency>
			<groupId>dom4j</groupId>
			<artifactId>dom4j</artifactId>
			<version>1.6.1</version>
			<type>jar</type>
			<url>http://dom4j.org/</url>
		</dependency>
		<dependency>
			<groupId>jboss</groupId>
			<artifactId>jboss-j2ee</artifactId>
			<version>${org.jboss.version}</version>
			<type>jar</type>
			<url>http://www.jboss.org/</url>
		</dependency>
	</dependencies>
	<build>
		<defaultGoal>singularity:dist</defaultGoal>
		<sourceDirectory>src</sourceDirectory>
		<unitTestSourceDirectory>test</unitTestSourceDirectory>
		<resources>
			<resource>
				<directory>descriptors</directory>
			</resource>
		</resources>
		<unitTest>
			<includes>
				<include>**/*.java</include>
			</includes>
		</unitTest>
	</build>
	<reports>
		<report>maven-checkstyle-plugin</report>
		<report>maven-javadoc-plugin</report>
		<report>maven-pmd-plugin</report>
		<report>maven-jxr-plugin</report>
		<report>maven-jdepend-plugin</report>
		<report>maven-findbugs-plugin</report>
		<report>maven-faq-plugin</report>
		<report>maven-license-plugin</report>
	</reports>
</project>